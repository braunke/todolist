<div class="addtask">
    <form id="addtask_form" action="add" method="POST">
        <input id="addtask_text" type="text" name="text" placeholder="todo task">
        <input id="addtask_button" type="submit" value="add">
    </form>
    </div>
<div class="messages">
    {{#if messages}}
        <p class="error_msg">{{messages.error}}</p>
        <p class="info_msg">{{messages.info}}</p>
    {{/if}}
</div>
    <div class="tasklist">
    {{#each tasks}}
        <p>{{@index}}: {{this.text}}</p>
    {{else}}
        <P>No tasks to do!</P>
        {{/each}}
    </div>

